{% extends 'base.html.twig' %}
/* GENERAL */

body
{
    font-family: 'Lato', sans-serif;
}


h1,h2,h3,h4,h5,h6
{
    font-weight: bold;

}
nav h1
{
    color: #fff;
}


    

.blue-divider
{
    width: 100px;
    height: 2px;
    background: #000080;
    margin: 0 auto;
}

.white-divider
{
    width: 100px;
    height: 2px;
    background: #fff;
    margin: 0 auto;
}

section
{
    padding: 45px 0 80px 0;
}

section .heading
{
    text-align: center;
    position: absolute;
    top: 100px;
    left: 100px;
    color: blue;
    z-index: 1;

}

/*MENU */
.navbar
{
   background: #000080;
   font-size: 12px;
   letter-spacing: 4px;
   text-transform: uppercase;
   font-weight: bold;
}
.navbar .navbar-nav
{
    display: inline-block;
    float: none;
    vertical-align: top;
}
.navbar .navbar-collapse
{
    text-align: center;
}
.navbar li a 
{
    color: #fff !important;
    
}
.navbar-nav li a:hover, .navbar-nav li.active a
{
    color: #000080 !important;
    background-color: #fff !important;
    
}
.navbar-default .navbar-toggle
{
    border-style: none;
}
.icon-bar
{
    background-color: #fff !important;
}

/*ACCEUIL */


 .heading

{

    height: 50px;
    width: 100%;

}

 #accueil
{
    color: darkblue;
     height: 300px;
     width: 100%;
     padding-top: 500px;
}

 #accueil .heading
 {
 padding-top: 100px;
     text-align: center;
 }
 #accueil .blue-divider
 {
     position: relative;
     bottom: 100px;
 }




img
{
    position: relative;
    bottom:-50px;
    width: 100%;
    height: 600px;
}


/* FOOTER*/

footer
{
    background: #333;
    padding: 20px 0 40px;
}
footer .glyhicon
{
    font-size: 25px;
    margin: 20px;
    color: #fff;
    height: 30px;
}

footer h5
{
    color: #fff;
    font-weight: bold;
    text-transform: uppercase;
}

footer h6
{
    color: #fff;
    font-weight: bold;
    text-transform: uppercase;
}
.wrapper
{
    margin-top: 200px;
}